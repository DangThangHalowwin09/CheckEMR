<Window x:Class="XmlCheckTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:XmlCheckTool.ViewModels"
        Title="XML Import Tool"
        Height="700"
        Width="1100">


    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>


    <DockPanel Margin="10">

        <!-- Button -->
        <StackPanel Orientation="Horizontal"
                DockPanel.Dock="Top"
                Margin="0,0,0,10">

            <!-- Button Import -->
            <Button Content="Import các file hồ sơ bệnh án"
                Command="{Binding ImportXmlCommand}"
                Height="40"
                Width="250"
                Margin="0,0,10,0"/>

            <!-- Button Clear -->
            <Button Content="Xóa dữ liệu đã import"
                    Command="{Binding ClearXmlCommand}"
                    IsEnabled="{Binding CanClear}"
                    Height="40"
                    Width="200"/>
        </StackPanel>

        <!-- 15 bảng -->
        <TabControl>

            <TabItem Header="XML1">
                <DataGrid ItemsSource="{Binding XML1_UI}" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="XML2">
                <DataGrid ItemsSource="{Binding XML2_UI}" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="XML3">
                <DataGrid ItemsSource="{Binding XML3_UI}" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="XML4">
                <DataGrid ItemsSource="{Binding XML4_UI}" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="XML5">
                <DataGrid ItemsSource="{Binding XML1_List}" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="XML13">
                <DataGrid ItemsSource="{Binding XML1_List}" AutoGenerateColumns="True"/>
            </TabItem>

            <!-- … tiếp tục tới 15 Tab -->
        </TabControl>

    </DockPanel>
</Window>
