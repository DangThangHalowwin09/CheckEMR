<Window x:Class="XmlCheckTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:XmlCheckTool.ViewModels"
        Title="XML Import Tool"
        Height="700"
        Width="1100">


    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>


    <DockPanel Margin="10">

        <!-- Button -->
        <Button Content="Import các file hồ sơ bệnh án"
                Command="{Binding ImportXmlCommand}"
                Height="40"
                DockPanel.Dock="Top"
                Margin="0,0,0,10"/>

        <!-- 15 bảng -->
        <TabControl>
            
            <TabItem Header="XML1">
                <DataGrid ItemsSource="{Binding XML1_UI}" AutoGenerateColumns="True"/>
            </TabItem>
            
            <TabItem Header="XML2">
                <DataGrid ItemsSource="{Binding XML2_UI}" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="XML3">
                <DataGrid ItemsSource="{Binding XML3_UI}" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="XML4">
                <DataGrid ItemsSource="{Binding XML4_UI}" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="XML5">
                <DataGrid ItemsSource="{Binding XML1_List}" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="XML6">
                <DataGrid ItemsSource="{Binding XML1_List}" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="XML7">
                <DataGrid ItemsSource="{Binding XML1_List}" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="XML8">
                <DataGrid ItemsSource="{Binding XML1_List}" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="XML9">
                <DataGrid ItemsSource="{Binding XML1_List}" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="XML10">
                <DataGrid ItemsSource="{Binding XML1_List}" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="XML11">
                <DataGrid ItemsSource="{Binding XML1_List}" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="XML12">
                <DataGrid ItemsSource="{Binding XML1_List}" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="XML13">
                <DataGrid ItemsSource="{Binding XML1_List}" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="XML14">
                <DataGrid ItemsSource="{Binding XML1_List}" AutoGenerateColumns="True"/>
            </TabItem>
            
            <!-- … tiếp tục tới 15 Tab -->
        </TabControl>

    </DockPanel>
</Window>
